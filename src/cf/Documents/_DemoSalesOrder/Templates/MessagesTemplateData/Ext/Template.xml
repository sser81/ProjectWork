		</field>
		<field xsi:type="DataSetFieldField">
			<dataPath>DeliveryAddress</dataPath>
			<field>DeliveryAddress</field>
			<title xsi:type="v8:LocalStringType">
				<v8:item>
					<v8:lang>en</v8:lang>
					<v8:content>Delivery address</v8:content>
				</v8:item>
			</title>
		</field>
		<dataSource>DataSource1</dataSource>
		<query>SELECT ALLOWED
	_DemoSalesOrder.Ref,
	_DemoSalesOrder.Date,
	_DemoSalesOrder.Number,
	_DemoSalesOrder.OrderStatus,
	_DemoSalesOrder.DocumentAmount,
	CASE
		WHEN _DemoSalesOrder.OrderStatus = VALUE(Enum._DemoCustomerOrderStatuses.Approved)
			THEN _DemoSalesOrder.DocumentAmount
		ELSE 0
	END AS AmountToPay,
	_DemoSalesOrder.Currency,
	CASE
		WHEN _DemoSalesOrder.DeliveryDate = DATETIME(1, 1, 1)
			THEN &amp;DeliveryDate
		ELSE _DemoSalesOrder.DeliveryDate
	END AS DeliveryDate,
	_DemoSalesOrder.DeliveryAddressString AS DeliveryAddress,
	_DemoSalesOrder.EmailString AS Email,
	_DemoCounterpartiesContracts.ContractNumber AS ContractNumber,
	_DemoCounterpartiesContracts.ContractDate_ AS ContractDate_,
	CASE
		WHEN _DemoIndividuals.Gender = VALUE(Enum._DemoIndividualGender.Masculine)
			THEN &amp;SalutationMale
		WHEN _DemoIndividuals.Gender = VALUE(Enum._DemoIndividualGender.Feminine)
			THEN &amp;SalutationFemale
		ELSE &amp;SalutationGenderUnknown
	END AS IndividualSalutation,
	_DemoIndividuals.Description AS ContactPersonName
	
FROM
	Document._DemoSalesOrder AS _DemoSalesOrder
		LEFT JOIN Catalog._DemoCounterpartiesContracts AS _DemoCounterpartiesContracts
		ON _DemoSalesOrder.Contract = _DemoCounterpartiesContracts.Ref
		LEFT JOIN Catalog._DemoIndividuals AS _DemoIndividuals
		ON _DemoSalesOrder.ContactPerson = _DemoIndividuals.Ref
WHERE
	_DemoSalesOrder.Ref = &amp;_DemoSalesOrder</query>
