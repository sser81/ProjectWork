		<expression>Sum(Size) / 1024 / 1024</expression>
		<group>Period</group>
	</totalField>
	<totalField>
		<dataPath>Size</dataPath>
		<expression>Sum(EvalExpressionWithGroupArray("Size", "ApplicationNumber, MetadataKind, NameOfMetadataObjects", "Period = MaximumCalculationPeriodForMetadataObject")) / 1024 / 1024</expression>
