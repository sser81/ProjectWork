			<useRestriction>
				<field>true</field>
				<group>true</group>
				<order>true</order>
			</useRestriction>
		</field>
		<dataSource>DataSource1</dataSource>
		<query>SELECT
	SizeOfApplicationMetadataObjects.DataAreaAuxiliaryData AS ApplicationNumber,
	SizeOfApplicationMetadataObjects.MetadataObject AS MetadataObject,
	MAX(SizeOfApplicationMetadataObjects.Period) AS Period
INTO MaximumMetadataCalculationPeriod
FROM
	InformationRegister.SizeOfApplicationMetadataObjects AS SizeOfApplicationMetadataObjects
{WHERE
	SizeOfApplicationMetadataObjects.Period &gt;= &amp;BegPeriod,
	SizeOfApplicationMetadataObjects.Period &lt;= &amp;NdPeriod,
	SizeOfApplicationMetadataObjects.MetadataObject AS MetadataObject,
	SizeOfApplicationMetadataObjects.DataAreaAuxiliaryData AS ApplicationNumber}
GROUP BY
	SizeOfApplicationMetadataObjects.DataAreaAuxiliaryData,
	SizeOfApplicationMetadataObjects.MetadataObject
;
////////////////////////////////////////////////////////////////////////////////
SELECT
	SizeOfApplicationMetadataObjects.DataAreaAuxiliaryData AS ApplicationNumber,
	SizeOfApplicationMetadataObjects.MetadataObject AS MetadataObject,
	SizeOfApplicationMetadataObjects.Period AS Period,
	MaximumMetadataCalculationPeriod.Period AS MaximumCalculationPeriodForMetadataObject,
	SizeOfApplicationMetadataObjects.Size AS Size
{SELECT
	ApplicationNumber,
	MetadataObject,
	Period,
	MaximumCalculationPeriodForMetadataObject,
	Size
}
FROM
	InformationRegister.SizeOfApplicationMetadataObjects AS SizeOfApplicationMetadataObjects
		INNER JOIN MaximumMetadataCalculationPeriod AS MaximumMetadataCalculationPeriod
		ON SizeOfApplicationMetadataObjects.DataAreaAuxiliaryData = MaximumMetadataCalculationPeriod.ApplicationNumber
		AND SizeOfApplicationMetadataObjects.MetadataObject = MaximumMetadataCalculationPeriod.MetadataObject
{WHERE
	SizeOfApplicationMetadataObjects.Period &gt;= &amp;BegPeriod,
	SizeOfApplicationMetadataObjects.Period &lt;= &amp;NdPeriod,
	SizeOfApplicationMetadataObjects.MetadataObject AS MetadataObject,
	SizeOfApplicationMetadataObjects.DataAreaAuxiliaryData AS ApplicationNumber}</query>
		<autoFillFields>false</autoFillFields>
	</dataSet>
	<calculatedField>
		<dataPath>MetadataKind</dataPath>
		<expression>ApplicationsSize.PartOfMetadataObjectSFullName(MetadataObject, 1)</expression>
