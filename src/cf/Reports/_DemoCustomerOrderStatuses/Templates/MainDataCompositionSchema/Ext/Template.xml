		<field xsi:type="DataSetFieldField">
			<dataPath>ProformaInvoice</dataPath>
			<field>ProformaInvoice</field>
			<title xsi:type="v8:LocalStringType">
				<v8:item>
					<v8:lang>en</v8:lang>
					<v8:content>Proforma invoice</v8:content>
				</v8:item>
			</title>
		</field>
		<dataSource>DataSource1</dataSource>
		<query>SELECT ALLOWED
	_DemoSalesOrder.Ref AS BuyerSOrder,
	_DemoSalesOrder.OrderStatus AS OrderStatus,
	_DemoSalesOrder.Contract,
	_DemoSalesOrder.Counterparty,
	_DemoSalesOrder.Organization,
	_DemoSalesOrder.Partner,
	_DemoCustomerProformaInvoice.Ref AS ProformaInvoice
FROM
	Document._DemoSalesOrder AS _DemoSalesOrder
		LEFT JOIN Document._DemoCustomerProformaInvoice AS _DemoCustomerProformaInvoice
		ON _DemoCustomerProformaInvoice.Basis = _DemoSalesOrder.Ref</query>
	</dataSet>
